<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        {#        <input type="text" id="search"> #}
        <div class="container">
            <table id="myTable" class="">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in data %}
                        <tr>
                            <td>{{ book.Title }}</td>
                            <td>{{ book.Isbn }}</td>
                            <td><span>{{ book.author.FirstName }} {{ book.author.LastName }}</span></td>
                            <td>{{ book.publisher.Name }}</td>
                            <td>Edit | Delete</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a href="{{ base_url("get-all") }}">Link</a>
        </div>
        {#        <a href="{{ route_to('api') }}"></a> #}
        <script>
            $(document).ready(function () {
                // console.log('ready')
                $.ajax({
                    url: "{{ base_url('get-all') }}",
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        addRow(data.data)
                    }
                })
            })

            $('tbody').on('click', '.editButton', function () {
                console.log('clicked')
            })

            function addRow(data) {
                var rows = ''
                // console.log(data)
                $.each(data, function (key, value) {
                    // console.log(value.Author)
                    rows = rows + '<tr>'
                    rows = rows + '<td>' + value.Title + '</td>'
                    rows = rows + '<td>' + value.ISBN + '</td>'
                    rows = rows + '<td>' + value.Author.FirstName + ' ' + value.Author.LastName + '</td>'
                    rows = rows + '<td>' + value.Publisher.Name + '</td>'
                    rows = rows + '<td>'
                    rows = rows + '<button class="editButton" id="' + value.Id + '">Edit</button>'
                    rows = rows + '<button class="deleteButton" id="' + value.Id + '">Delete</button>'
                    rows = rows + '</td>'
                    rows = rows + '</tr>'
                    $("tbody").html(rows);
                })
            }
        </script>
    </body>
</html>
